{
  "compilerOptions": {
    "target": "es6",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "src/global.d.ts"],
  "exclude": ["node_modules/**/*", "dist"]
}
